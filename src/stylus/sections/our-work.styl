.our-work {
	padding: 3.4rem 0
}

.our-work__wrap {
	display: flex
	justify-content: space-between
}

.our-work__item {
	width: 100%
	&:first-child{
		max-width: rem(191)
	}
	&:nth-child(2){
		max-width: rem(247)
	}
	&:nth-child(3){
		max-width: rem(206)
	}
	&:nth-child(4){
		max-width: rem(201)
	}
}

.our-work__item-number {
	display: flex
	justify-content: center
	align-items: center
	width rem(80)
	height: rem(80)
	background: #ffffff
	border-radius: 50%
	p {
		font-weight: 900;
		font-size: rem(64);
		line-height: rem(62);
		text-transform: uppercase;
		color: #FF9736;
		margin-top: .7rem
	}
}

.our-work__item-txt {
	margin-top: 1.4rem
	p {
		font-size: rem(20);
		line-height: 1;
		color: #98E9FF;
	}
}