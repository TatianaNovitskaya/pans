.top-info {
	padding: rem(40) 0 5rem
}

.info__wrap {
	display: flex
	justify-content: space-between
	flex-wrap: wrap
}

.info__column {
	width: 50%
	position: relative
}

.top-info__column-left {
	width: 50%
	position: relative
}

.info__title {
	p {
		font-size: rem(36);
		line-height: rem(38);
		color: #98E9FF;
		margin-top: 0.9rem
	}
}

.top-info__title {
	margin-top: 0.8rem
}

.info__list {
	li {
		display: flex
		align-items: center
		margin-top: 2.7rem
		&:nth-child(2){
			margin-top: 3.1rem
		}
		&:nth-child(3){
			margin-top: 3.1rem
		}
	}
}

.info__list-img {
	width: rem(100)
	height: rem(100)
	border-radius: 50%
	background: #ffffff
	display: flex
	justify-content: center
	align-items: center
	margin-right rem(20)
img {
		width: rem(55)
		height: rem(67)
	}
}
.info__list-txt{
	width: 100%
	max-width: rem(265)
	color: #98E9FF;
	font-size: rem(20);
	line-height: rem(20);
	margin-top: 0.4rem
}
	
	.top-product_back{
		width: 32.27rem;
		height: 32.27rem;
		margin: -1.2rem 0 0 14.3rem;
		position: relative
		z-index: 4
	}
	.top-product{
		width: rem(468);
		height: rem(390);
		margin: -17.5rem 0 0 0.5rem;
		position: relative
		z-index: 5
	}
	.info__price{
		width: 12.92rem;
		height: 12.92rem;
		background: #ffffff
		border-radius: 50%
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
		position: absolute;
		top: 8.4rem;
		left: 0.6rem;
		z-index: 4
	}
	.old-price{
		font-weight: bold;
		font-size: rem(30);
		line-height: rem(30);
		text-decoration: line-through;
		color: #888888;
		margin-top: 1rem
	}
	.new-price{
		font-weight: bold;
		font-size: rem(50);
		line-height: rem(50);
		color: #FF5050;
	}
	.info__sale{
		width: rem(200)
		height: rem(200)
		border-radius: 50%
		background: #ffffff
		display: flex
		justify-content: center
		align-items: center
		p{
			color:  #2C93B4
			font-size: rem(72);
			line-height: rem(72);
			font-weight: bold
			margin-top: 2.2rem
		}
	}
	
	.top-info__sale{
		position: absolute;
		right: 7rem;
		top: 29rem;
		z-index: 4
	}
	.top-info__discount-btn{
		width: 100%
		max-width: rem(310)
		text-align: center
		margin: -0.4rem 0 0 -9.6rem;
	}
	.btn-footnote{
		margin-top: 1rem
	p{
		color: #ffffff
		font-size: rem(16);
		font-weight: bold
		line-height: 1
		letter-spacing: 1px;
		text-transform: uppercase;
	}
	}
	
	
	
	
	
.top-info__sale-1 {
	animation-name: scale;
	animation-duration: 3s;
	animation-timing-function: linear;
	animation-iteration-count: infinite;
	animation-direction: alternate;
	animation-delay: .2s
}

@keyframes scale {
	from {
		transform: scale(0.5)
	}
	to {
		transform: scale(1)
	}
}
