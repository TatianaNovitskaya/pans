.product {
	background: url("../images/bg-1.png") no-repeat
	-webkit-background-size: cover
	background-size: cover
	padding: 5.6rem 0 9.5rem
}

.product__title {
	text-align: center
}

.product__wrap {
	padding: rem(30)
	margin-top: 3.2rem
	background: #ffffff
	display: flex
	justify-content: space-between
	
}

.product__column-left {
	width: 100%
	max-width: rem(603)
}

.product__column-right {
	width: 100%
	max-width: 30.8rem
}

.product__info {
	margin-top: 2.8rem
	p {
		color: #666666
		font-size: rem(18)
		line-height: 1
		margin-bottom: 1.15rem
	}
	span{
		display: inline-block;
		width: 100%;
		max-width: 11.8rem;
	}
}
	.product__list{
		margin-top: 2.2rem
		li{
			margin-bottom: 1.15rem
		}
		span{
			color: #666666
			font-size: rem(18)
			line-height: 1
			
		}
	}
		.product__price{
			display: flex
			flex-direction: column
			justify-content: flex-end
			align-items: flex-end
			margin-right: -.7rem
		}
			.product__form{
				margin-top: rem(33)
				
			}
.order-form{
	width: 100%
	display: flex
	input{
		width: rem(260)
		height: rem(55)
		background: #E7E7E7;
		border: 1px solid #CCCCCC;
		box-sizing: border-box;
		margin-right: 1.25rem
		padding-left: 1.3rem
		font-family: 'HelveticaNeueCyr';
		font-size: rem(16);
		letter-spacing: 1px;
		color: #666666
		&::placeholder{
			font-family: 'HelveticaNeueCyr';
			font-size: rem(16);
			letter-spacing: 1px;
			color: #666666
		}
	}
	button{
		border: none
		position: absolute
		color: #fff;
		font-family: 'HelveticaNeueCyr';
		font-size: rem(26);
		letter-spacing: 2px;
		text-transform: uppercase;
		font-weight: 700;
		display: inline-block
		right: 13.3rem;
		bottom: -1.7rem;
		&:after {
			display: none
		}
		&:hover{
			background: linear-gradient(103deg, #FFD600 0%, #FF6B00 100%);
			-webkit-text-fill-color: #fff;
		}
		
	}
}