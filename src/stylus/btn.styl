.btn {
	margin: 0
	text-align: center
	text-decoration: none
	cursor: pointer
	position: relative
	z-index: 5
	display: inline-block
	span {
		color: #fff;
		font-family: 'HelveticaNeueCyr';
		font-size: rem(26);
		letter-spacing: 2px;
		text-transform: uppercase;
		font-weight: 700;
		display: inline-block
		margin-top: 0.3rem
	}
}

.btn_big {
	padding: 1.3rem 0;
	width: rem(309);
	height: rem(73);
}

.btn_yellow {
	border-radius: rem(50);
	background: linear-gradient(103deg, #FFD600 0%, #FF6B00 100%);
	box-shadow: 0px 5px 5px rgba(9, 43, 53, 0.3);
	transition all 300ms ease-in-out;
	position: relative;
	display: flex
	align-items: center
	justify-content: center
	&:after {
		content: '';
		position: absolute;
		width: 103%
		top: 0;
		right: 0;
		bottom: 0;
		left:rem(-5);
		background: url("../images/border-gradient.png") no-repeat
		background-size: 100%
		opacity: 0
		transition all 300 ms ease-in-out
	}
	&:hover {
		background: transparent
		span {
			//background: linear-gradient(103deg, #FFD600 0%, #FF6B00 100%);
			//-webkit-background-clip: text;
			//-webkit-text-fill-color: transparent;
			color: #ffa100
		}
		&:after {
			opacity: 1
		}
	}
}


.js__show {
	opacity: 0
	transition $opacityTransition
}

.animate {
	opacity: 1
}